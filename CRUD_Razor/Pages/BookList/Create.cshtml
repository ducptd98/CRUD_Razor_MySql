@page
@model CRUD_Razor.Pages.BookList.CreateModel

<h4>Book</h4>
<hr />
<div class="row" style="border: 1px solid #bbb9b9; border-radius: 10px; width:100%">
    <form method="post" style="width: 100%">
        <div class="row" style="padding: 30px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 75%">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Book.Name"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Book.Name" class="form-control" />
                        
                    </div>
                    <span asp-validation-for="Book.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="width: 75%">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Book.IBSN"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Book.IBSN" class="form-control" />
                        <span asp-validation-for="Book.IBSN" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group" style="width: 75%">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Book.Author" class="form-control" />
                        <span asp-validation-for="Book.Author" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group" style="padding-left: 15px;">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-page="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
